<div class="top-bar"></div>
{{#each voos}}
  <div class="info-bar">
    <div class="info-container">
      <label>Origem:</label>
      <span class="info-detail">{{this.origem}}</span>
    </div>
    <div class="info-container">
      <label>Destino:</label>
      <span class="info-detail">{{this.destino}}</span>
    </div>
    <div class="info-container">
      <label>Datas:</label>
      <span class="info-detail">{{this.horarioSaida}}
        -
        {{this.horarioChegada}}</span>
    </div>
    <div class="info-container">
      <label>Passageiros:</label>
      <span class="info-detail">1 Passageiro</span>
    </div>
    <span class="info-detail">Economy</span>
  </div>

  <div class="fare-container">
    <div class="fare-card light">
      <h3 class="fare-title">Light</h3>
      <p class="fare-price">BRL {{this.valor}}</p>
      <button class="fare-button light">Continuar com a Light</button>
    </div>

    <div class="fare-card">
      <h3 class="fare-title">Standard</h3>
      <p class="fare-price">BRL {{this.valorStandard}}</p>
      <button class="fare-button">Escolher</button>
    </div>

    <div class="fare-card">
      <h3 class="fare-title">Full</h3>
      <p class="fare-price">BRL {{this.valorFull}}</p>
      <button class="fare-button">Escolher</button>
    </div>

    <div class="fare-card premium">
      <h3 class="fare-title">Premium Economy</h3>
      <p class="fare-price">BRL {{this.valorPremiumEconomy}}</p>
      <button class="fare-button">Escolher</button>
    </div>
  </div>
{{/each}}
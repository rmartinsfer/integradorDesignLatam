<script>
  document.addEventListener("DOMContentLoaded", function () {
  const idaVolta = document.getElementById("trip-type-dropdown");
  const dataVolta = document.getElementById("dataVolta");

  if (idaVolta) {
    idaVolta.addEventListener("change", function () {
      if (idaVolta.value === "Ida e volta") {
        dataVolta.style.display = "block";
      } else {
        dataVolta.style.display = "none";
      }
    });
  }
});

</script>